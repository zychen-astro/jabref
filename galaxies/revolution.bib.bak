@Article{Dokkum2013,
  author   = {Pieter G. van Dokkum and Joel Leja and Erica June Nelson and Shannon Patel and Rosalind E. Skelton and Ivelina Momcheva and Gabriel Brammer and Katherine E. Whitaker and Britt Lundgren and Mattia Fumagalli and Charlie Conroy and Natascha Förster Schreiber and Marijn Franx and Mariska Kriek and Ivo Labbé and Danilo Marchesini and Hans-Walter Rix and Arjen van der Wel and Stijn Wuyts},
  title    = {The Assembly of Milky-Way-like Galaxies Since z ~ 2.5},
  journal  = {The Astrophysical Journal Letters},
  year     = {2013},
  volume   = {771},
  number   = {2},
  pages    = {L35},
  abstract = {Galaxies with the mass of the Milky Way dominate the stellar mass density of the universe but it is uncertain how and when they were assembled. Here we study progenitors of these galaxies out to z = 2.5, using data from the 3D-HST and CANDELS Treasury surveys. We find that galaxies with present-day stellar masses of log ( M ) ##IMG## [http://ej.iop.org/icons/Entities/ap.gif] {≈} 10.7 built ~90% of their stellar mass since z = 2.5, with most of the star formation occurring before z = 1. In marked contrast to the assembly history of massive elliptical galaxies, mass growth is not limited to large radii: the mass in the central 2 kpc of the galaxies increased by a factor of ##IMG## [http://ej.iop.org/images/2041-8205/771/2/L35/apjl477335ieqn1.gif] {$3.2^{+0.8}_{-0.7}$} between z = 2.5 and z = 1. We therefore rule out simple models in which bulges were fully assembled at high redshift and disks gradually formed around them. Instead, bulges (and black holes) likely formed in lockstep with disks, through bar instabilities, migration, or other processes. We find that after z = 1 the growth in the central regions gradually stopped and the disk continued to be built up, consistent with recent studies of the gas distributions in z ~ 1 galaxies and the properties of many spiral galaxies today.},
  groups   = {assemble/growth/size, assemble/growth},
  url      = {http://stacks.iop.org/2041-8205/771/i=2/a=L35},
}

@Article{Oser2012,
  author   = {Ludwig Oser and Thorsten Naab and Jeremiah P. Ostriker and Peter H. Johansson},
  title    = {The Cosmological Size and Velocity Dispersion Evolution of Massive Early-type Galaxies},
  journal  = {The Astrophysical Journal},
  year     = {2012},
  volume   = {744},
  number   = {1},
  pages    = {63},
  abstract = {We analyze 40 cosmological re-simulations of individual massive galaxies with present-day stellar masses of M * > 6.3 × 10 10 M ☉ in order to investigate the physical origin of the observed strong increase in galaxy sizes and the decrease of the stellar velocity dispersions since redshift z ##IMG## [http://ej.iop.org/icons/Entities/ap.gif] {≈} 2. At present 25 out of 40 galaxies are quiescent with structural parameters (sizes and velocity dispersions) in agreement with local early-type galaxies. At z = 2 all simulated galaxies with M * ##IMG## [http://ej.iop.org/icons/Entities/gsim.gif] {gsim} 10 11 M ☉ (11 out of 40) at z = 2 are compact with projected half-mass radii of ##IMG## [http://ej.iop.org/icons/Entities/ap.gif] {≈} 0.77 (±0.24) kpc and line-of-sight velocity dispersions within the projected half-mass radius of ##IMG## [http://ej.iop.org/icons/Entities/ap.gif] {≈} 262 (±28) km s –1 (3 out of 11 are already quiescent). Similar to observed compact early-type galaxies at high redshift, the simulated galaxies are clearly offset from the local mass-size and mass-velocity dispersion relations. Toward redshift zero the sizes increase by a factor of ~5-6, following R 1/2 ##IMG## [http://ej.iop.org/icons/Entities/vprop.gif] {vprop} (1 + z ) α with α = –1.44 for quiescent galaxies (α = –1.12 for all galaxies). The velocity dispersions drop by about one-third since z ##IMG## [http://ej.iop.org/icons/Entities/ap.gif] {≈} 2, following σ 1/2 ##IMG## [http://ej.iop.org/icons/Entities/vprop.gif] {vprop} (1 + z ) β with β = 0.44 for the quiescent galaxies (β = 0.37 for all galaxies). The simulated size and dispersion evolution is in good agreement with observations and results from the subsequent accretion and merging of stellar systems at z ##IMG## [http://ej.iop.org/icons/Entities/lsim.gif] {lsim} 2, which is a natural consequence of the hierarchical structure formation. A significant number of the simulated massive galaxies (7 out of 40) experience no merger more massive than 1:4 (usually considered as major mergers). On average, the dominant accretion mode is stellar minor mergers with a mass-weighted mass ratio of 1:5. We therefore conclude that the evolution of massive early-type galaxies since z ##IMG## [http://ej.iop.org/icons/Entities/ap.gif] {≈} 2 and their present-day properties are predominantly determined by frequent "minor" mergers of moderate mass ratios and not by major mergers alone.},
  groups   = {assemble/growth/size, assemble/growth},
  url      = {http://stacks.iop.org/0004-637X/744/i=1/a=63},
}

@Article{DavidzonI.2017,
  author  = {{Davidzon, I.} and {Ilbert, O.} and {Laigle, C.} and {Coupon, J.} and {McCracken, H. J.} and {Delvecchio, I.} and {Masters, D.} and {Capak, P.} and {Hsieh, B. C.} and {Le F\`evre, O.} and {Tresse, L.} and {Bethermin, M.} and {Chang, Y.-Y.} and {Faisst, A. L.} and {Le Floc\'{}h, E.} and {Steinhardt, C.} and {Toft, S.} and {Aussel, H.} and {Dubois, C.} and {Hasinger, G.} and {Salvato, M.} and {Sanders, D. B.} and {Scoville, N.} and {Silverman, J. D.}},
