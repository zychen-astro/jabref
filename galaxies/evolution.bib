@Article{Shibuya2015,
  author   = {Takatoshi Shibuya and Masami Ouchi and Yuichi Harikane},
  title    = {Morphologies of ∼190,000 Galaxies at z = 0–10 Revealed with HST Legacy Data. I. Size Evolution},
  journal  = {ApJS},
  year     = {2015},
  volume   = {219},
  number   = {2},
  pages    = {15},
  abstract = {We present the redshift evolution of the galaxy effective radius r e obtained from the Hubble Space Telescope ( HST ) samples of ∼190,000 galaxies at z = 0–10. Our HST samples consist of 176,152 photo- z galaxies at z = 0–6 from the 3D- HST +CANDELS catalog and 10,454 Lyman break galaxies (LBGs) at z = 4–10 identified in the Cosmic Assembly Near-infrared Deep Extragalactic Legacy Survey (CANDELS), HUDF 09/12, and HFF parallel fields, providing the largest data set to date for galaxy size evolution studies. We derive r e with the same technique over the wide redshift range of z = 0–10, evaluating the optical-to-UV morphological K correction and the selection bias of photo- z galaxies+LBGs as well as the cosmological surface-brightness dimming effect. We find that r e values at a given luminosity significantly decrease towardhigh z , regardless of statistics choices (e.g., ##IMG## [http://ej.iop.org/images/0067-0049/219/2/15/apjs514368ieqn1.gif] {${r}_{{\rm{e}}}\propto {(1+z)}^{-1.10\pm 0.06}$} for median). For star-forming galaxies, there is no evolution of the power-law slope of the size–luminosity relation and the median Sérsic index ( ##IMG## [http://ej.iop.org/images/0067-0049/219/2/15/apjs514368ieqn2.gif] {$n\sim 1.5$} ). Moreover, the r e distribution is well represented by log-normal functions whose standard deviation ##IMG## [http://ej.iop.org/images/0067-0049/219/2/15/apjs514368ieqn3.gif] {${\sigma }_{\mathrm{ln}{r}_{{\rm{e}}}}$} does not show significant evolution within the range of ##IMG## [http://ej.iop.org/images/0067-0049/219/2/15/apjs514368ieqn4.gif] {${\sigma }_{\mathrm{ln}{r}_{{\rm{e}}}}\sim 0.45-0.75$} . We calculate the stellar-to-halo size ratio from our r e measurements and the dark-matter halo masses estimated from the abundance-matching study, and we obtain a nearly constant value of ##IMG## [http://ej.iop.org/images/0067-0049/219/2/15/apjs514368ieqn5.gif] {${r}_{{\rm{e}}}/{r}_{\mathrm{vir}}=1.0\%-3.5\%$} at z = 0–8. The combination of the r e -distribution shape+standard deviation, the constant ##IMG## [http://ej.iop.org/images/0067-0049/219/2/15/apjs514368ieqn6.gif] {${r}_{{\rm{e}}}/{r}_{\mathrm{vir}}$} , and ##IMG## [http://ej.iop.org/images/0067-0049/219/2/15/apjs514368ieqn7.gif] {$n\sim 1.5$} suggests a picture in which typical high- z star-forming galaxies have disk-like stellar components in a sense of dynamics and morphology over cosmic time of ##IMG## [http://ej.iop.org/images/0067-0049/219/2/15/apjs514368ieqn8.gif] {$z\sim 0-6$} . If high- z star-forming galaxies are truly dominated by disks, the ##IMG## [http://ej.iop.org/images/0067-0049/219/2/15/apjs514368ieqn9.gif] {${r}_{{\rm{e}}}/{r}_{\mathrm{vir}}$} value and the disk-formation model indicate that the specific angular momentum of the disk normalized by the host halo is ##IMG## [http://ej.iop.org/images/0067-0049/219/2/15/apjs514368ieqn10.gif] {${j}_{{\rm{d}}}/{m}_{{\rm{d}}}\simeq 0.5-1$} . These are statistical results for major stellar components of galaxies, and the detailed study of clumpy subcomponents is presented in the paper II.},
  groups   = {assemble/growth/size, assemble/growth},
  url      = {http://stacks.iop.org/0067-0049/219/i=2/a=15},
}

@Article{Simons2017,
  author        = {Simons, R. C. and Kassin, S. A. and Weiner, B. J. and Faber, S. M. and Trump, J. R. and Heckman, T. M. and Koo, D. C. and Pacifici, C. and Primack, J. R. and Snyder, G. F. and de la Vega, A.},
  title         = {z\~{}2: An Epoch of Disk Assembly},
  journal       = {ArXiv},
  year          = {2017},
  month         = may,
  abstract      = {We explore the evolution of the internal gas kinematics of star-forming galaxies from the peak of cosmic star-formation at $z\sim2$ to today. Measurements of galaxy rotation velocity $V\_{rot}$, which quantify ordered motions, and gas velocity dispersion $\sigma\_g$, which quantify disordered motions, are adopted from the DEEP2 and SIGMA surveys. This sample covers a continuous baseline in redshift from $z=2.5$ to $z=0.1$, spanning 10 Gyrs. At low redshift, nearly all sufficiently massive star-forming galaxies are rotationally supported ($V\_{rot}\gt\sigma\_g$). By $z=2$, the percentage of galaxies with rotational support has declined to 50$\\%$ at low stellar mass ($10^{9}-10^{10}\,M\_{\odot}$) and 70$\\%$ at high stellar mass ($10^{10}-10^{11}M\_{\odot}$). For $V\_{rot}\,\gt\,3\,\sigma\_g$, the percentage drops below 35$\\%$ for all masses. From $z\,=\,2$ to now, galaxies exhibit remarkably smooth kinematic evolution on average. All galaxies tend towards rotational support with time, and it is reached earlier in higher mass systems. This is mostly due to an average decline in $\sigma\_g$ by a factor of 3 since a redshift of 2, which is independent of mass. Over the same time period, $V\_{rot}$ increases by a factor of 1.5 for low mass systems, but does not evolve for high mass systems. These trends in $V\_{rot}$ and $\sigma\_g$ with time are at a fixed stellar mass and should not be interpreted as evolutionary tracks for galaxy populations. When galaxy populations are linked in time with abundance matching, not only does $\sigma\_g$ decline with time as before, but $V\_{rot}$ strongly increases with time for all galaxy masses. This enhances the evolution in $V\_{rot}/\sigma\_g$. These results indicate that $z\,=\,2$ is a period of disk assembly, during which the strong rotational support present in today's massive disk galaxies is only just beginning to emerge.},
  archiveprefix = {arXiv},
  eprint        = {1705.03474},
  groups        = {assemble/growth/size, assemble/growth},
  keywords      = {Astrophysics - Astrophysics of Galaxies},
  url           = {http://adsabs.harvard.edu/abs/2017arXiv170503474S},
}

