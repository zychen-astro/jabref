  url           = {http://adsabs.harvard.edu/abs/2008ApJ...687...50P},
}

@Article{Price2017,
  author        = {Price, S. H. and Kriek, M. and Feldmann, R. and Quataert, E. and Hopkins, P. F. and Faucher-Gigu{\`e}re, C.-A. and Kere{\v s}, D. and Barro, G.},
  title         = {Testing the Recovery of Intrinsic Galaxy Sizes and Masses of z\~{}2 Massive Galaxies Using Cosmological Simulations},
  journal       = {ArXiv},
  year          = {2017},
  month         = jul,
  abstract      = {Accurate measurements of galaxy masses and sizes are key to tracing galaxy evolution over time. Cosmological zoom-in simulations provide an ideal test bed for assessing the recovery of galaxy properties from observations. Here, we utilize galaxies with $M\_*\sim10^{10}-10^{11.5}M\_{\odot}$ at z\~{}1.7-2 from the MassiveFIRE cosmological simulation suite, part of the Feedback in Realistic Environments (FIRE) project. Using mock multi-band images, we compare intrinsic galaxy masses and sizes to observational estimates. We find that observations accurately recover stellar masses, with a slight average underestimate of \~{}0.06 dex and a \~{}0.15 dex scatter. Recovered half-light radii agree well with intrinsic half-mass radii when averaged over all viewing angles, with a systematic offset of \~{}0.1 dex (with the half-light radii being larger) and a scatter of \~{}0.2 dex. When using color gradients to account for mass-to-light variations, recovered half-mass radii also exceed the intrinsic half-mass radii by \~{}0.1 dex. However, if not properly accounted for, aperture effects can bias size estimates by \~{}0.1 dex. No differences are found between the mass and size offsets for star-forming and quiescent galaxies. Variations in viewing angle are responsible for \~{}25\% of the scatter in the recovered masses and sizes. Our results thus suggest that the intrinsic scatter in the mass-size relation may have previously been overestimated by \~{}25\%. Moreover, orientation-driven scatter causes the number density of very massive galaxies to be overestimated by \~{}0.5 dex at $M\_*\sim10^{11.5}M\_{\odot}$.},
  archiveprefix = {arXiv},
  eprint        = {1707.01094},
  groups        = {massive},
  keywords      = {Astrophysics - Astrophysics of Galaxies},
  url           = {http://adsabs.harvard.edu/abs/2017arXiv170701094P},
}

@Article{Tadaki2017,
  author   = {Ken-ichi Tadaki and Tadayuki Kodama and Erica J. Nelson and Sirio Belli and Natascha M. Förster Schreiber and Reinhard Genzel and Masao Hayashi and Rodrigo Herrera-Camus and Yusei Koyama and Philipp Lang and Dieter Lutz and Rhythm Shimakawa and Linda J. Tacconi and Hannah Übler and Emily Wisnioski and Stijn Wuyts and Bunyo Hatsukade and Magdalena Lippa and Kouichiro Nakanishi and Soh Ikarashi and Kotaro Kohno and Tomoko L. Suzuki and Yoichi Tamura and Ichi Tanaka},
  title    = {Rotating Starburst Cores in Massive Galaxies at z = 2.5},
  journal  = {ApJL},
  year     = {2017},
  volume   = {841},
  number   = {2},
  pages    = {L25},
  abstract = {We present spatially resolved ALMA observations of the CO ##IMG## [http://ej.iop.org/images/2041-8205/841/2/L25/apjlaa7338ieqn1.gif] {$J=3-2$} emission line in two massive galaxies at z = 2.5 on the star-forming main sequence. Both galaxies have compact dusty star-forming cores with effective radii of ##IMG## [http://ej.iop.org/images/2041-8205/841/2/L25/apjlaa7338ieqn2.gif] {${R}_{{\rm{e}}}=1.3\pm 0.1\,\mathrm{kpc}$} and ##IMG## [http://ej.iop.org/images/2041-8205/841/2/L25/apjlaa7338ieqn3.gif] {${R}_{{\rm{e}}}=1.2\pm 0.1\,\mathrm{kpc}$} in the 870 μ m continuum emission. The spatial extent of star-forming molecular gas is also compact with ##IMG## [http://ej.iop.org/images/2041-8205/841/2/L25/apjlaa7338ieqn4.gif] {${R}_{{\rm{e}}}=1.9\pm 0.4\,\mathrm{kpc}$} and ##IMG## [http://ej.iop.org/images/2041-8205/841/2/L25/apjlaa7338ieqn5.gif] {${R}_{{\rm{e}}}=2.3\pm 0.4\,\mathrm{kpc}$} , but more extended than the dust emission. Interpreting the observed position–velocity diagrams with dynamical models, we find the starburst cores to be rotation dominated with the ratio of the maximum rotation velocity to the local velocity dispersion of ##IMG## [http://ej.iop.org/images/2041-8205/841/2/L25/apjlaa7338ieqn6.gif] {${v}_{\max }/{\sigma }_{0}={7.0}_{-2.8}^{+2.5}$} ( ##IMG## [http://ej.iop.org/images/2041-8205/841/2/L25/apjlaa7338ieqn7.gif] {${v}_{\max }={386}_{-32}^{+36}$} km s −1 ) and ##IMG## [http://ej.iop.org/images/2041-8205/841/2/L25/apjlaa7338ieqn8.gif] {${v}_{\max }/{\sigma }_{0}={4.1}_{-1.5}^{+1.7}$} ( ##IMG## [http://ej.iop.org/images/2041-8205/841/2/L25/apjlaa7338ieqn9.gif] {${v}_{\max }={391}_{-41}^{+54}$} km s −1 ). Given that the descendants of these massive galaxies in the local universe are likely ellipticals with ##IMG## [http://ej.iop.org/images/2041-8205/841/2/L25/apjlaa7338ieqn10.gif] {$v/\sigma $} nearly an order of magnitude lower, the rapidly rotating galaxies would lose significant net angular momentum in the intervening time. The comparisons among dynamical, stellar, gas, and dust mass suggest that the starburst CO-to-H 2 conversion factor of ##IMG## [http://ej.iop.org/images/2041-8205/841/2/L25/apjlaa7338ieqn11.gif] {${\alpha }_{\mathrm{CO}}=0.8\,{M}_{\odot }$} (K km s −1 pc −2 ) −1 is appropriate in the spatially resolved cores. The dense cores are likely to be formed in extreme environments similar to the central regions of local ultraluminous infrared galaxies. Our work also demonstrates that a combination of medium-resolution CO and high-resolution dust continuum observations is a powerful tool for characterizing the dynamical state of molecular gas in distant galaxies.},
  groups   = {massive},
  url      = {http://stacks.iop.org/2041-8205/841/i=2/a=L25},
}

@Article{Toft2017,
  author        = {Toft, S. and Zabl, J. and Richard, J. and Gallazzi, A. and Zibetti, S. and Prescott, M. and Grillo, C. and Man, A. W. S. and Lee, N. Y. and G{\'o}mez-Guijarro, C. and Stockmann, M. and Magdis, G. and Steinhardt, C. L.},
  title         = {A massive, dead disk galaxy in the early Universe},
  journal       = {Nature},
  year          = {2017},
  volume        = {546},
  pages         = {510-513},
  month         = jun,
  abstract      = {At redshift z{\thinsp}={\thinsp}2, when the Universe was just three billion years old, half of the most massive galaxies were extremely compact and had already exhausted their fuel for star formation. It is believed that they were formed in intense nuclear starbursts and that they ultimately grew into the most massive local elliptical galaxies seen today, through mergers with minor companions, but validating this picture requires higher-resolution observations of their centres than is currently possible. Magnification from gravitational lensing offers an opportunity to resolve the inner regions of galaxies. Here we report an analysis of the stellar populations and kinematics of a lensed z{\thinsp}={\thinsp}2.1478 compact galaxy, which{\mdash}surprisingly{\mdash}turns out to be a fast-spinning, rotationally supported disk galaxy. Its stars must have formed in a disk, rather than in a merger-driven nuclear starburst. The galaxy was probably fed by streams of cold gas, which were able to penetrate the hot halo gas until they were cut off by shock heating from the dark matter halo. This result confirms previous indirect indications that the first galaxies to cease star formation must have gone through major changes not just in their structure, but also in their kinematics, to evolve into present-day elliptical galaxies.},
  archiveprefix = {arXiv},
  doi           = {10.1038/nature22388},
  eprint        = {1706.07030},
  groups        = {massive},
  url           = {http://adsabs.harvard.edu/abs/2017Natur.546..510T},
}

@Article{Trujillo2009,
  author   = {Ignacio Trujillo and A. Javier Cenarro and Adriana de Lorenzo-Cáceres and Alexandre Vazdekis and Ignacio G. de la Rosa and Antonio Cava},
  title    = {Superdense Massive Galaxies in the Nearby Universe},
  journal  = {ApJL},
  year     = {2009},
  volume   = {692},
  number   = {2},
  pages    = {L118},
  abstract = {Superdense massive galaxies ( r e ~ 1 kpc; M ~ 10 11 M ☉ ) were common in the early universe ( z ##IMG## [http://ej.iop.org/icons/Entities/gsim.gif] {gsim} 1.5). Within some hierarchical merging scenarios, a non-negligible fraction (1%-10%) of these galaxies is expected to survive since that epoch, retaining their compactness and presenting old stellar populations in the present universe. Using the NYU Value-Added Galaxy Catalog from the Sloan Digital Sky Survey Data Release 6, we find only a tiny fraction of galaxies (~0.03%) with r e ##IMG## [http://ej.iop.org/icons/Entities/lsim.gif] {lsim} 1.5 kpc and M ##IMG## [http://ej.iop.org/icons/Entities/sstarf.gif] {sstarf} ##IMG## [http://ej.iop.org/icons/Entities/gsim.gif] {gsim} 8 × 10 10 M ☉ in the local universe ( z < 0.2). Surprisingly, they are relatively young (~2 Gyr) and metal-rich ([Z/H] ~0.2). The consequences of these findings within the current two competing size evolution scenarios for the most massive galaxies ("dry" mergers vs. "puffing up" due to quasar activity) are discussed.},
  groups   = {massive},
  url      = {http://stacks.iop.org/1538-4357/692/i=2/a=L118},
}

@Article{Wang2015,
  author        = {Wang, T. and Elbaz, D. and Schreiber, C. and Pannella, M. and Shu, X. and Willner, S. P. and Ashby, M. L. N. and Huang, J.-S. and Fontana, A. and Dekel, A. and Daddi, E. and Ferguson, H. C. and Dunlop, J. and Ciesla, L. and Koekemoer, A. M. and Giavalisco, M. and Boutsia, K. and Finkelstein, S. and Juneau, S. and Barro, G. and Koo, D. C. and Micha{\l}owski, M. J. and Orellana, G. and Lu, Y. and Castellano, M. and Bourne, N. and Buitrago, F. and Santini, P. and Faber, S. M. and Hathi, N. and Lucas, R. A. and P{\'e}rez-Gonz{\'a}lez, P. G.},
  title         = {Infrared color selection of massive galaxies at z $\gt$ 3},
  journal       = {ArXiv},
  year          = {2015},
  month         = dec,
  abstract      = {We introduce a new color-selection technique to identify high-redshift, massive galaxies that are systematically missed by Lyman-break selection. The new selection is based on the H\_$\{$160$\}$ and IRAC 4.5um bands, specifically H - [4.5] $\gt$ 2.25 mag. These galaxies, dubbed ``HIEROs'', include two major populations that can be separated with an additional J - H color. The populations are massive and dusty star-forming galaxies at z $\gt$ 3 (JH-blue) and extremely dusty galaxies at z $\lt$ 3 (JH-red). The 350 arcmin\^{}2 of the GOODS-N and GOODS-S fields with the deepest HST/WFC3 and IRAC data contain 285 HIEROs down to [4.5] $\lt$ 24 mag. We focus here primarily on JH-blue (z $\gt$ 3) HIEROs, which have a median photometric redshift z \~{}4.4 and stellar massM\_$\{$*$\}$\~{}10\^{}$\{$10.6$\}$ Msun, and are much fainter in the rest-frame UV than similarly massive Lyman-break galaxies (LBGs). Their star formation rates (SFRs) reaches \~{}240 Msun yr\^{}$\{$-1$\}$ leading to a specific SFR, sSFR \~{}4.2 Gyr\^{}$\{$-1$\}$, suggesting that the sSFRs for massive galaxies continue to grow at z $\gt$ 2 but at a lower growth rate than from z=0 to z=2. With a median half-light radius of 2 kpc, including \~{}20\% as compact as quiescent galaxies at similar redshifts, JH-blue HIEROs represent perfect star-forming progenitors of the most massive (M\_$\{$*$\}$ $\gt$ 10\^{}$\{$11.2$\}$ Msun) compact quiescent galaxies at z \~{} 3 and have the right number density. HIEROs make up \~{}60\% of all galaxies with M\_$\{$*$\}$ $\gt$ 10\^{}$\{$10.5$\}$ Msun identified at z $\gt$ 3 from their photometric redshifts. This is five times more than LBGs with nearly no overlap between the two populations. While HIEROs make up 15-25\% of the total SFR density at z \~{} 4-5, they completely dominate the SFR density taking place in M\_$\{$*$\}$ $\gt$10\^{}$\{$10.5$\}$ Msun galaxies, and are therefore crucial to understanding the very early phase of massive galaxy formation.},
  archiveprefix = {arXiv},
  eprint        = {1512.02656},
  groups        = {massive},
  keywords      = {Astrophysics - Astrophysics of Galaxies},
  url           = {http://adsabs.harvard.edu/abs/2015arXiv151202656W},
}

@InProceedings{Barro2013a,
