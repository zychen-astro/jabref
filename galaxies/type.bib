@Article{Barro2014a,
  author   = {Guillermo Barro and Jonathan R. Trump and David C. Koo and Avishai Dekel and Susan A. Kassin and Dale D. Kocevski and Sandra M. Faber and Arjen van der Wel and Yicheng Guo and Pablo G. Pérez-González and Elisa Toloba and Jerome J. Fang and Camilla Pacifici and Raymond Simons and Randy D. Campbell and Daniel Ceverino and Steven L. Finkelstein and Bob Goodrich and Marc Kassis and Anton M. Koekemoer and Nicholas P. Konidaris and Rachael C. Livermore and James E. Lyke and Bahram Mobasher and Hooshang Nayyeri and Michael Peth and Joel R. Primack and Luca Rizzi and Rachel S. Somerville and Gregory D. Wirth and Adi Zolotov},
  title    = {Keck-I MOSFIRE Spectroscopy of Compact Star-forming Galaxies at z 2: High Velocity Dispersions in Progenitors of Compact Quiescent Galaxies},
