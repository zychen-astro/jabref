@Article{Guzman1997,
  author   = {Rafael Guzmán and Jesús Gallego and David C. Koo and Andrew C. Phillips and James D. Lowenthal and S. M. Faber and Garth D. Illingworth and Nicole P. Vogt},
  title    = {The Nature of Compact Galaxies in the Hubble Deep Field. II. Spectroscopic Properties and Implications for the Evolution of the Star Formation Rate Density of the Universe},
  journal  = {ApJ},
  year     = {1997},
  volume   = {489},
  number   = {2},
  pages    = {559},
  abstract = {We present a spectroscopic study of 51 compact field galaxies with redshifts z < 1.4 and apparent magnitudes I 814 < 23.74 in the flanking fields of the Hubble Deep Field. These galaxies are compact in the sense that they have small apparent half-light radii ( r 1/2 ≤ 0 ##IMG## [http://ej.iop.org/icons/Entities/farcs.gif] {farcs} 5) and high surface brightnesses (μ I 814 ≤ 22.2 mag arcsec -2 ). The spectra, taken at the Keck telescope, show emission lines in 88% of our sample, and only absorption lines in the remaining 12%. Emission-line profiles are roughly Gaussian with velocity widths that range from the measurement limit of σ ~ 35 km s -1 to 150 km s -1 . Rest frame [O II ] λ3727 equivalent widths range from 5 to 94 Å, yielding star formation rates (SFRs) of ~0.1 to 14 M ☉ yr -1 . The analysis of various line diagnostic diagrams reveals that ~60% of compact emission-line galaxies have velocity widths, excitations, Hβ luminosities, SFRs, and mass-to-light ratios characteristic of young star-forming H II galaxies. The remaining 40% form a more heterogeneous class of evolved starbursts, similar to local starburst disk galaxies. We find that, although the compact galaxies at z > 0.7 have similar SFRs per unit mass to those at z < 0.7, they are on average ~10 times more massive . Our sample implies a lower limit for the global comoving SFR density of ~0.004 M ☉ yr -1 Mpc -3 at z = 0.55, and ~0.008 M ☉ yr -1 Mpc -3 at z = 0.85 (assuming Salpeter IMF, H 0 = 50 km s -1 Mpc -1 , and q 0 = 0.5). These values, when compared to estimates for a sample of local compact galaxies selected in a similar fashion, support a history of the universe in which the SFR density declines by a factor ~10 from z = 1 to today. From the comparison with the SFR densities derived for magnitude-limited samples of field galaxies, we conclude that compact emission-line galaxies, though only ~20% of the general field population, may contribute as much as ~45% to the global SFR of the universe at 0.4 < z < 1.},
  groups   = {compact, high-z/CG},
  url      = {http://stacks.iop.org/0004-637X/489/i=2/a=559},
}

@Article{Charbonnier2017,
  author        = {Charbonnier, A. and Huertas-Company, M. and Gon{\c c}alves, T. S. and Men{\'e}ndez-Delmestre, K. and Bundy, K. and Galliano, E. and Moraes, B. and Makler, M. and Pereira, M. E. S. and Erben, T. and Hildebrandt, H. and Shan, H.-Y. and Caminha, G. B. and Grossi, M. and Riguccini, L.},
  title         = {The abundance of compact quiescent galaxies since z {\tilde} 0.6},
  journal       = {MNRAS},
  year          = {2017},
  volume        = {469},
  pages         = {4523-4536},
  month         = aug,
  abstract      = {We set out to quantify the number density of quiescent massive compact galaxies at intermediate redshifts. We determine structural parameters based on I-band imaging using the Canada-France-Hawaii Telescope (CFHT) equatorial Sloan Digital Sky Survey (SDSS) Stripe 82 (CS82) survey ({\tilde}170 deg$^{2}$) taking advantage of an exquisite median seeing of {\tilde}0.6 arcsec. We select compact massive (M$_{⋆}$ $\gt$ 5 {\times} 10$^{10}$ M$_{⊙}$) galaxies within the redshift range of 0.2 $\lt$ z $\lt$ 0.6. The large volume sampled allows to decrease the effect of cosmic variance that has hampered the calculation of the number density for this enigmatic population in many previous studies. We undertake an exhaustive analysis in an effort to untangle the various findings inherent to the diverse definition of compactness present in the literature. We find that the absolute number of compact galaxies is very dependent on the adopted definition and can change up to a factor of $\gt$10. We systematically measure a factor of {\tilde}5 more compacts at the same redshift than what was previously reported on smaller fields with Hubble Space Telescope (HST) imaging, which are more affected by cosmic variance. This means that the decrease in number density from z {\tilde} 1.5 to z {\tilde} 0.2 might be only of a factor of {\tilde}2-5, significantly smaller than what was previously reported. This supports progenitor bias as the main contributor to the size evolution. This milder decrease is roughly compatible with the predictions from recent numerical simulations. Only the most extreme compact galaxies, with R$_{eff}$ $\lt$ 1.5 {\times} (M$_{⋆}$/10$^{11}$ M$_{⊙}$)$^{0.75}$ and M$_{⋆}$ $\gt$ 10$^{10.7}$ M$_{⊙}$, appear to drop in number by a factor of {\tilde}20 and hence likely experience a noticeable size evolution.},
  archiveprefix = {arXiv},
  doi           = {10.1093/mnras/stx1142},
  eprint        = {1701.03471},
  groups        = {nearby/CG},
  keywords      = {catalogues, surveys, galaxies: elliptical and lenticular, cD, galaxies: evolution, galaxies: formation, galaxies: structure},
  url           = {http://adsabs.harvard.edu/abs/2017MNRAS.469.4523C},
}

@Article{Damjanov2015,
  author   = {Ivana Damjanov and Margaret J. Geller and H. Jabran Zahid and Ho Seong Hwang},
  title    = {Quiescent Compact Galaxies at Intermediate Redshift in the COSMOS Field. The Number Density},
  journal  = {ApJ},
  year     = {2015},
  volume   = {806},
  number   = {2},
  pages    = {158},
  abstract = {We investigate the evolution of compact galaxy number density over the redshift range ##IMG## [http://ej.iop.org/images/0004-637X/806/2/158/apj514223ieqn1.gif] {$0.2\lt z\lt 0.8$} . Our sample consists of galaxies with secure spectroscopic redshifts observed in the COSMOS field. With the large uncertainties, the compact galaxy number density trend with redshift is consistent with a constant value over the interval ##IMG## [http://ej.iop.org/images/0004-637X/806/2/158/apj514223ieqn2.gif] {$0.2\lt z\lt 0.8$} . Our number density estimates are similar to the estimates at ##IMG## [http://ej.iop.org/images/0004-637X/806/2/158/apj514223ieqn3.gif] {$z\gt 1$} for equivalently selected compact samples. Small variations in the abundance of the COSMOS compact sources as a function of redshift correspond to known structures in the field. The constancy of the compact galaxy number density is robust and insensitive to the compactness threshold or the stellar mass range (for ##IMG## [http://ej.iop.org/images/0004-637X/806/2/158/apj514223ieqn4.gif] {${M}_{*}\gt {10}^{10}\;{M}_{\odot }$} ). To maintain constant number density any size growth of high-redshift compact systems with decreasing redshift must be balanced by a formation of quiescent compact systems at ##IMG## [http://ej.iop.org/images/0004-637X/806/2/158/apj514223ieqn5.gif] {$z\lt 1$} .},
  groups   = {nearby/CG},
  url      = {http://stacks.iop.org/0004-637X/806/i=2/a=158},
}

