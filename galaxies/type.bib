@Article{Guo2016a,
  author        = {Guo, Y. and Rafelski, M. and Faber, S. M. and Koo, D. C. and Krumholz, M. R. and Trump, J. R. and Willner, S. P. and Amor{\'{\i}}n, R. and Barro, G. and Bell, E. F. and Gardner, J. P. and Gawiser, E. and Hathi, N. P. and Koekemoer, A. M. and Pacifici, C. and P{\'e}rez-Gonz{\'a}lez, P. G. and Ravindranath, S. and Reddy, N. and Teplitz, H. I. and Yesuf, H.},
  title         = {The Bursty Star Formation Histories of Low-mass Galaxies at $0.4\ltz\lt1$ Revealed by Star Formation Rates Measured from H$\beta$ and FUV},
  journal       = {ArXiv},
  year          = {2016},
  month         = apr,
  abstract      = {We investigate the burstiness of star formation histories (SFHs) of galaxies at $0.4\ltz\lt1$ by using the ratio of star formation rates (SFRs) measured from H$\beta$ and FUV (1500 $\backslash$AA) (H$\beta$--to--FUV ratio). Our sample contains 164 galaxies down to stellar mass (M*) of $10^{8.5} M\_\odot$ in the CANDELS GOODS-N region, where Team Keck Redshift Survey DEIMOS spectroscopy and HST/WFC3 F275W images from CANDELS and Hubble Deep UV Legacy Survey are available. When the $\{$$\backslash$it ratio$\}$ of H$\beta$- and FUV-derived SFRs is measured, dust extinction correction is negligible (except for very dusty galaxies) with the Calzetti attenuation curve. The H$\beta$--to--FUV ratio of our sample increases with M* and SFR. The median ratio is $\sim$0.7 at M*$\sim10^{8.5} M\_\odot$ (or SFR$\sim 0.5 M\_\odot/yr$) and increases to $\sim$1 at M*$\sim10^{10} M\_\odot$ (or SFR $\sim 10 M\_\odot/yr$). At M*$\lt10^{9.5} M\_\odot$, our median H$\beta$--to--FUV ratio is lower than that of local galaxies at the same M*, implying a redshift evolution. Bursty SFH on a timescale of a few tens of megayears on galactic scales provides a plausible explanation of our results, and the importance of the burstiness increases as M* decreases. Due to sample selection effects, our H$\beta$--to--FUV ratio may be an upper limit of the true value of a complete sample, which strengthens our conclusions. Other models, e.g., non-universal initial mass function or stochastic star formation on star cluster scales, are unable to plausibly explain our results.},
  archiveprefix = {arXiv},
  eprint        = {1604.05314},
  groups        = {massive},
  keywords      = {Astrophysics - Astrophysics of Galaxies},
  url           = {http://adsabs.harvard.edu/abs/2016arXiv160405314G},
}

@Article{Hill2017,
  author   = {Allison R. Hill and Adam Muzzin and Marijn Franx and Bart Clauwens and Corentin Schreiber and Danilo Marchesini and Mauro Stefanon and Ivo Labbe and Gabriel Brammer and Karina Caputi and Johan Fynbo and Bo Milvang-Jensen and Rosalind E. Skelton and Pieter van Dokkum and Katherine E. Whitaker},
  title    = {The Mass, Color, and Structural Evolution of Today’s Massive Galaxies Since z ∼ 5},
  journal  = {ApJ},
  year     = {2017},
  volume   = {837},
  number   = {2},
  pages    = {147},
  abstract = {In this paper, we use stacking analysis to trace the mass growth, color evolution, and structural evolution of present-day massive galaxies ( ##IMG## [http://ej.iop.org/images/0004-637X/837/2/147/apjaa61feieqn1.gif] {$\mathrm{log}({M}_{* }/{M}_{\odot })=11.5$} ) out to z = 5. We utilize the exceptional depth and area of the latest UltraVISTA data release, combined with the depth and unparalleled seeing of CANDELS to gather a large, mass-selected sample of galaxies in the NIR (rest-frame optical to UV). Progenitors of present-day massive galaxies are identified via an evolving cumulative number density selection, which accounts for the effects of merging to correct for the systematic biases introduced using a fixed cumulative number density selection, and find progenitors grow in stellar mass by ##IMG## [http://ej.iop.org/images/0004-637X/837/2/147/apjaa61feieqn2.gif] {$\approx 1.5\,\mathrm{dex}$} since z = 5. Using stacking, we analyze the structural parameters of the progenitors and find that most of the stellar mass content in the central regions was in place by ##IMG## [http://ej.iop.org/images/0004-637X/837/2/147/apjaa61feieqn3.gif] {$z\sim 2$} , and while galaxies continue to assemble mass at all radii, the outskirts experience the largest fractional increase in stellar mass. However, we find evidence of significant stellar mass build-up at ##IMG## [http://ej.iop.org/images/0004-637X/837/2/147/apjaa61feieqn4.gif] {$r\lt 3\,\mathrm{kpc}$} beyond ##IMG## [http://ej.iop.org/images/0004-637X/837/2/147/apjaa61feieqn5.gif] {$z\gt 4$} probing an era of significant mass assembly in the interiors of present-day massive galaxies. We also compare mass assembly from progenitors in this study to the EAGLE simulation and find qualitatively similar assembly with z at ##IMG## [http://ej.iop.org/images/0004-637X/837/2/147/apjaa61feieqn6.gif] {$r\lt 3\,\mathrm{kpc}$} . We identify ##IMG## [http://ej.iop.org/images/0004-637X/837/2/147/apjaa61feieqn7.gif] {$z\sim 1.5$} as a distinct epoch in the evolution of massive galaxies where progenitors transitioned from growing in mass and size primarily through in situ star formation in disks to a period of efficient growth in r e consistent with the minor merger scenario.},
  groups   = {massive},
  url      = {http://stacks.iop.org/0004-637X/837/i=2/a=147},
}

@Article{Jung2016,
